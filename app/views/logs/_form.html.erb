<%= form_with(model: log) do |form| %>
  <% if log.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(log.errors.count, "error") %> prohibited this log from being saved:</h2>

      <ul>
        <% log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :car, style: "display: block" %>
    <%= form.text_area :model %>
  </div>

  <div class="control-group">
    <%= form.label :service, class: 'control-group' %>
    <div class="controls">
      <%= collection_select( :log, :service_id, Service.all, :id, :title, {}, { :multiple => false})%>
    </div>
  </div>

  <% Log::TAGS.each do |key| %>
    <%= form.check_box :tags, { multiple: true }, key, nil %>
    <%= form.label key %>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_select :dateinstructed %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_area :status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
