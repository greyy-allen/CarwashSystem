<div id="<%= dom_id vehicle %>">
  <p>
    <strong>Make:</strong>
    <%= vehicle.make %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= vehicle.model %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= vehicle.color %>
  </p>

  <p>
    <strong>Customer:</strong>
    <%= vehicle.display_owner %>
  </p>

  <p>
    <strong>Plates:</strong>
    <%= vehicle.plates %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= vehicle.description %>
  </p>

  <p>
    <strong>Image:</strong>
  </p>
    <%- if @vehicle.vehicle_source.present? %>
      <%= image_tag @vehicle.vehicle_source.url, class: "vehicle-show" %>
    <%- else %>
      <%= image_tag 'eastwest.png', class: "vehicle-show" %>
    <%- end %>
</div>
